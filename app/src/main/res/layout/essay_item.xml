<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="30dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/purple_200"
    android:padding="100dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <!-- 文章标题 -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="文章标题"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 发布时间 -->
        <TextView
            android:id="@+id/text_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:text="发布时间"
            android:textSize="16sp" />

        <!-- 文章ID -->
        <TextView
            android:id="@+id/text_essay_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_toRightOf="@+id/text_publish_time"
            android:layout_marginLeft="150dp"
            android:text="ID"
            android:visibility="gone"
            android:textSize="14sp" />

        <!-- 作者 -->
        <TextView
            android:id="@+id/text_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_publish_time"
            android:text="作者"
            android:textSize="16sp" />

        <!-- 收藏数 -->
        <TextView
            android:id="@+id/text_favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏数"
            android:layout_marginLeft="150dp"
            android:layout_alignBottom="@+id/text_author"
            android:layout_toRightOf="@+id/text_author"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>