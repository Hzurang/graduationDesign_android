<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.english">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.English"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="LOGIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GuideActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.ForgetPwdActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.EssayActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.CalendarActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.PlanActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.ChooseWordDBActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.ChangePlanActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.LoginByCodeActivity"
            android:exported="true"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activity.WelcomeActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>